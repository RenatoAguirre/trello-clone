<%= form_with(model: state, remote: true) do |form| %>
  <div class="form-group mb-3">
    <%= form.label :name %>
    <%= form.text_area :name, class: "form-control", required: true %>
    <%= form.hidden_field :board_id, value: @board.id %>
  </div>
  <%= form.submit "Submit", class: "btn btn-primary" %>
<% end %>
