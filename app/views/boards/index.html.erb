<h1>All Boards</h1>
<%= link_to 'New Board', new_board_path, class: 'btn btn-success mb-3' %>
<div class="row">
  <% @boards.each do |board| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title"><%= board.name %></h5>
          <p class="card-text"><%= board.description %></p>
        </div>
        <div class="card-footer">
          <%= link_to 'Show', board_path(board), class: 'btn btn-info' %>
          <%= link_to 'Edit', edit_board_path(board), class: 'btn btn-warning' %>
          <%= link_to 'Destroy', board_path(board), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?' } , class: 'btn btn-danger' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
