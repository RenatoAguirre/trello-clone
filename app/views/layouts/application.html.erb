<!DOCTYPE html>
<html>
  <head>
    <title>Boards Manager</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <!-- Stylesheets -->
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' if defined?(Webpacker) %>
    <!-- JavaScript -->
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' if defined?(Webpacker) %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload', type: "module"%>
  </head>
  <body class="d-flex flex-column align-content-stretch vh-100">
    <%= render 'layouts/navbar' %>
    <main class="p-4  overflow-auto">
      <%= yield %>
    </main>
  </body>
</html>
