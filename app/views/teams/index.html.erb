<h1>Teams</h1>
<%= link_to 'New Team', new_team_path %>
<ul>
  <% @teams.each do |team| %>
    <li>
      <%= link_to team.name, team_path(team) %>
      <%= button_to 'Join', join_team_path(team), method: :post %>
    </li>
  <% end %>
</ul>
<% flash.each do |type, msg| %>
  <div class="alert alert-warning alert-dismissible fade show" role="alert">
    <%= msg %>
  </div>
<% end %>